<FedizConfig>
    <contextConfig name="/nics">
        <audienceUris>
            <audienceItem><FQDN>/nics/</audienceItem>
        </audienceUris>
        <certificateStores>
            <trustManager>
                <keyStore file="<HOST>-idp.jks" password="<PASSWORD>" type="JKS" />
            </trustManager>
        </certificateStores>
        <trustedIssuers>
            <issuer certificateValidation="PeerTrust" />
        </trustedIssuers>
        <tokenExpirationValidation>false</tokenExpirationValidation>
        <maximumClockSkew>10</maximumClockSkew>
        <protocol xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:type="federationProtocolType" version="1.0.0">
            <realm><FQDN>/nics/</realm>
            <issuer><FQDN><IDP_PATH></issuer>
            <roleDelimiter>,</roleDelimiter>
            <roleURI>https://schemas.xmlsoap.org/ws/2005/05/identity/claims/role</roleURI>
            <reply>/j_spring_fediz_security_check</reply>
            <claimTypesRequested>
                <claimType type="http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name" optional="false" />
				<claimType type="http://schemas.xmlsoap.org/ws/2005/05/identity/claims/emailaddress" optional="true" />
				<claimType type="http://schemas.microsoft.com/ws/2008/06/identity/claims/role" optional="true" />
            </claimTypesRequested>
            <tokenValidators>
                <validator>com.ardentmc.dhs.nics.NICSSAMLTokenValidator</validator>
            </tokenValidators>
        </protocol>
    </contextConfig>
</FedizConfig>

